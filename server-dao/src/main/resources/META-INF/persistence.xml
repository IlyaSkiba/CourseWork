<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">

    <persistence-unit name="JGeekPU" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.ejb.HibernatePersistence</provider>

        <class>com.bsu.server.dto.CourseEntity</class>
        <class>com.bsu.server.dto.ThemeEntity</class>
        <class>com.bsu.server.dto.security.UserAccount</class>
        <class>com.bsu.server.dto.UserGroupEntity</class>
        <class>com.bsu.server.dto.security.UserRole</class>
        <class>com.bsu.server.theoretic.test.dto.AnswerEntity</class>
        <class>com.bsu.server.theoretic.test.dto.QuestionEntity</class>
        <class>com.bsu.server.theoretic.test.dto.TestDto</class>
        <class>com.bsu.server.theoretic.test.student.entity.StudentAnswerEntity</class>
        <class>com.bsu.server.theoretic.test.student.entity.StudentResultEntity</class>
        <properties>
            <property name="hibernate.hbm2ddl.auto" value="create"/>
        </properties>

    </persistence-unit>

</persistence>